extends layout

block content

   table#cart.table.table-hover.table-condensed
     thead
       tr
         th(style='width:50%') Product
         th(style='width:10%') Price
         th(style='width:8%') Quantity
         th.text-center(style='width:22%') Subtotal
         th(style='width:10%')
     tbody
         -if(cart){
        -for(var i=0; i< cart.length; i++){
            tr.cart-product-line
                input.product-url(type='hidden', value=cart[i].id)
                td(data-th='Product')
                    .row
                        .col-sm-2.hidden-xs
                            img.img-responsive(src=cart[i].img, alt='...' width="100" height="100")
                        .col-sm-10
                            h4.nomargin= cart[i].name
                                span.padding-left-30= cart[i].opt1
                                span.padding-left-30= cart[i].opt2
                td.cart-product-price(data-th='Price')= cart[i].price
                td.cart-product-qty(data-th='Quantity')
                    input.form-control.text-center(type='number', value=cart[i].qty)
                td.cart-product-sub.text-center(data-th='Subtotal') 1.99
                td.actions(data-th='')
                    button.btn.btn-danger.btn-sm.btn-remove
                        i.fa.fa-trash-o
        -}
       -}
     tfoot
       tr.visible-xs
         td.text-center
           strong Total 1.99
       tr
         td
           a.btn.btn-warning.btn-cart-back(href='/')
             i.fa.fa-angle-left
             |  Continue Shopping
         td.hidden-xs(colspan='2')
         td.hidden-xs.text-center
           strong Total $
           span.main-total 0
         td
           a.btn.btn-success.btn-block(href='#')
             | Checkout 
             i.fa.fa-angle-right